@model Eticaret.Core.Entities.Odeme

@{
	ViewData["Title"] = "Sipariş Detay";
}



<div>
	<h4>Odeme</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.OrderNo)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.OrderNo)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.TotalPrice) TL
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.TotalPrice)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.AppUser)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.AppUser.Name)
			@Html.DisplayFor(model => model.AppUser.SurName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.CustomerId)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.CustomerId)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.BillingAddress)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.BillingAddress)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.DeliveryAddress)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.DeliveryAddress)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.OrderDate)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.OrderDate)
		</dd>
	</dl>

	@if (Model.OdemeLines.Any())
	{
		<table class="table table-sm table-hover">
			<tr>
				<th></th>
				<th>ÜRÜN</th>
				<th>FİYAT</th>
				<th>ADET</th>
				<th>TOPLAM</th>
			</tr>
			<tbody>

				@foreach (var item2 in Model.OdemeLines)
				{
					<tr>
						<td>
							<img src="/Image/Product/@item2.Product.Image" height="40" />
						</td>
						<td>
							<a class="nav-link text-dark" href="/Products/Details/@item2.Product.Id">
								@item2.Product.Name
							</a>
						</td>
						<td>
							@item2.UnitPrice.ToString("c")
						</td>
						<td>
							@item2.Quantity
						</td>
						<td>
							@((item2.Quantity * item2.UnitPrice).ToString("c"))
						</td>

					</tr>
				}


			</tbody>

		</table>
	}
</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
	<a asp-action="Index">Listeye Dön</a>
</div>
