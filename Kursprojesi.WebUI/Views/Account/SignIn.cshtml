@model LoginViewModel
@{
	ViewData["Title"] = "HESABIM";
}

<style>
    html,
    body {
        height: 100%;
    }

    .form-signin {  
        max-width: 330px;
        padding: 1rem;
    }

        .form-signin .form-floating:focus-within {
            z-index: 2;
        }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }

</style>

<main class="form-signin w-100 m-auto shadow rounded my-auto">
    <form asp-action="SignIn">
        <img src="/Image/logo projedeki.jpg" height="50"  />
        <h1 class="mb-6 fw-normal" style="font-size:2rem;">Giriş Yap</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="Email" class="form-control " id="floatingInput" placeholder="name@example.com" />
            <label for="floatingInput">Email </label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for ="Password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Şifre</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-check text-start my-3">
            <input asp-for="RememberMe" class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Beni Hatırla
            </label>
        </div>
        <input type="hidden" asp-for="ReturnUrl" value="@Context.Request.Query["ReturnUrl"]"/>
        <button class="btn btn-primary w-100 py-2" type="submit">Giriş</button>
        
    </form>
    <hr />
    <div class="row">
        <div class="col-12">
            <a href="/Account/SignUp" class="btn btn-group-vertical  w-25 ">Üye Ol</a>
            <a href="/Account/SifremiUnuttum" class="btn btn-group-vertical w-35">Şifremi Unuttum</a>
        </div>
        <div class="col-12">
           
        </div>
    </div>
    
</main>
