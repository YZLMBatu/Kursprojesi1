@model Product
<div class="col mb-5">
	<div class="card h-100" style="margin-left:0.1rem;">
		<!-- Sale badge-->
		<div class="badge bg-dark text-white position-absolute" style="top: 1rem; right: 0.5rem">İNDİRİM</div>
		<form asp-action="Add" asp-controller="Favori">
			<input type="hidden" name="ProductId"  value="@Model.Id" />
			<button class="btn btn-transparent" type="submit" style="box-shadow:none">
				<i class="bi-heart" ></i>
			</button>
		</form>
		<!-- Product image-->
		<a href="/Products/Details/@Model.Id">
			<img class="card-img-top" src="/Image/Product/@Model.Image" alt="@Model.Name">
		</a>

		<!-- Product details-->
		<div class="card-body p-4">
			<div class="text-center">
				<!-- Product name-->
				<h5 class="fw-bolder">@Model.Name</h5>
				<!-- Product price-->
				@Model.Price.ToString("c")₺
			</div>
		</div>
		<!-- Product actions-->
		<div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
			<form action="/Sepet/Add" method="post">
				<input type="hidden" name="ProductId" value="@Model.Id" />
				<div class="text-center"><button class="btn btn-outline-dark mt-auto" type="submit"><i class="bi-cart-fill me-1"></i>Sepete Ekle</button></div>
			</form>

		</div>
	</div>
</div>